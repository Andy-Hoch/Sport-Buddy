<div class="container py-5">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-6">
      <div class="bg-white rounded p-4 shadow">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <h2 class='pb-3'>Become a Part of Sport Buddy</h2>
            <div class="row g-3">
              <div class="col-md-6 form-floating mb-3">
                <%= f.input_field :first_name, class: 'form-control mb-3', placeholder: 'First Name' %>
                <%= f.label :first_name, 'First Name' %>
              </div>
              <div class="col-md-6 form-floating mb-3">
                <%= f.input_field :last_name, class: 'form-control mb-3', placeholder: 'Last Name' %>
                <%= f.label :last_name, 'Last Name' %>
              </div>
            </div>
            <%= f.input :birth_date %>
            <div class="form-floating mb-3">
              <%= f.input_field :phone_number, class: 'form-control mb-3', placeholder: 'Phone Number' %>
              <%= f.label :phone_number, 'Phone Number'  %>
            </div>
            <div class="form-floating mb-3">
              <%= f.input_field :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          class: 'form-control mb-3',
                          placeholder: 'Email'%>
              <%= f.label :email, 'Email' %>
            </div>
            <div class="form-floating mb-3">
              <%= f.input_field :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" },
                          class: 'form-control mb-3',
                          placeholder: 'Password' %>
              <%= f.label :password, 'Password' %>
            </div>
            <div class="form-floating mb-3">
              <%= f.input_field :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" },
                          class: 'form-control mb-3',
                          placeholder: 'Password Confirmation' %>
              <%= f.label :password_confirmation, 'Password Confirmation' %>
            </div>
            <%= f.input :photo, as: :file %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
