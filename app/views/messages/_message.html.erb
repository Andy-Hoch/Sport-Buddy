<div class="message <%= message.user == current_user ? 'user-message' : 'other-message' %>" data-message-user-id="<%= message.user.id %>">
  <small>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
